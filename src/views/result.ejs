    <script type="module">
      const { createApp, ref, reactive, onMounted, nextTick } = Vue;

      createApp({
        setup() {
          const records = ref([]);
          const loading = ref(true);
          const error = ref(null);
          const showDeleteModal = ref(false);
          const recordToDelete = ref(null);
          const toast = reactive({
            show: false,
            message: '',
            type: 'info',
            timeout: null,
          });

          // è¨˜éŒ„æš«å­˜çš„æ›´æ”¹
          const tempChanges = reactive({});

          // æ—¥æœŸé¸æ“‡å™¨ç›¸é—œç‹€æ…‹
          const showDatePickerModal = ref(false);
          const dateTimeInput = ref(null);
          const currentEditRecord = ref(null);
          const flatpickrInstance = ref(null);

          // é¡¯ç¤ºæ—¥æœŸé¸æ“‡å™¨
          const showDatePicker = (record) => {
            currentEditRecord.value = record;
            showDatePickerModal.value = true;

            // ç­‰å¾…DOMæ›´æ–°å¾Œåˆå§‹åŒ–Flatpickr
            nextTick(() => {
              const currentDate = record.date ? new Date(parseInt(record.date)) : new Date();

              // åˆå§‹åŒ–Flatpickr
              flatpickrInstance.value = flatpickr(dateTimeInput.value, {
                enableTime: true,
                dateFormat: 'Y-m-d H:i',
                locale: 'zh_tw',
                time_24hr: true,
                defaultDate: currentDate,
                minuteIncrement: 1,
              });

              flatpickrInstance.value.open();
            });
          };

          // å–æ¶ˆæ—¥æœŸé¸æ“‡
          const cancelDateSelection = () => {
            if (flatpickrInstance.value) {
              flatpickrInstance.value.destroy();
            }
            showDatePickerModal.value = false;
            currentEditRecord.value = null;
          };

          // ç¢ºèªæ—¥æœŸé¸æ“‡
          const confirmDateSelection = () => {
            if (currentEditRecord.value && flatpickrInstance.value) {
              const selectedDate = flatpickrInstance.value.selectedDates[0];

              if (selectedDate) {
                // æ›´æ–°è¨˜éŒ„çš„æ—¥æœŸï¼ˆå­˜ç‚ºæ™‚é–“æˆ³ï¼‰
                const timestamp = selectedDate.getTime().toString();
                handleInput(currentEditRecord.value.id, 'date', timestamp);
                updateRecord(currentEditRecord.value.id);
              }
            }

            cancelDateSelection(); // é—œé–‰é¸æ“‡å™¨ä¸¦æ¸…ç†
          };

          // è™•ç†è¼¸å…¥è®Šæ›´
          const handleInput = (id, field, value) => {
            if (!tempChanges[id]) {
              tempChanges[id] = {};
            }
            tempChanges[id][field] = value;

            // åŒæ™‚æ›´æ–°æœ¬åœ°é¡¯ç¤ºæ•¸æ“š
            const record = records.value.find((r) => r.id === id);
            if (record) {
              record[field] = value;
            }
          };

          // æ›´æ–°å–®æ¢è¨˜éŒ„
          const updateRecord = async (idKey) => {
            console.log('æ›´æ–°è¨˜éŒ„:', idKey);
            console.log(typeof idKey);
            if (!tempChanges[idKey]) return;

            const record = records.value.find((r) => r.id === idKey);
            if (!record) return;

            try {
              loading.value = true;
              await axios.get('./api/update', {
                params: {
                  id: idKey,
                  date: record.date,
                  systolic: record.systolic,
                  diastolic: record.diastolic,
                  pulse: record.pulse,
                },
              });

              delete tempChanges[idKey];
              showToast('è¨˜éŒ„å·²æ›´æ–°', 'success');
            } catch (err) {
              console.error('æ›´æ–°è¨˜éŒ„å¤±æ•—:', err);
              showToast('æ›´æ–°å¤±æ•—ï¼Œè«‹å†è©¦ä¸€æ¬¡', 'error');
            } finally {
              loading.value = false;
            }
          };

          // é¡¯ç¤ºæç¤ºè¨Šæ¯
          const showToast = (message, type = 'info', duration = 3000) => {
            if (toast.timeout) {
              clearTimeout(toast.timeout);
            }

            toast.message = message;
            toast.type = type;
            toast.show = true;

            toast.timeout = setTimeout(() => {
              toast.show = false;
            }, duration);
          };

          // å¾APIç²å–æ‰€æœ‰è¨˜éŒ„
          const fetchRecords = async () => {
            loading.value = true;
            error.value = null;

            try {
              const response = await axios.get('./api/all');
              records.value = response.data;
              loading.value = false;
            } catch (err) {
              console.error('ç²å–è¨˜éŒ„å¤±æ•—:', err);
              error.value = 'ç„¡æ³•è¼‰å…¥è³‡æ–™ï¼Œè«‹æª¢æŸ¥ç¶²è·¯é€£æ¥ä¸¦é‡è©¦';
              loading.value = false;
            }
          };

          // æ ¼å¼åŒ–æ—¥æœŸ
          const formatDate = (timestamp) => {
            if (!timestamp) return 'æœªè¨˜éŒ„æ—¥æœŸ';

            try {
              const date = new Date(parseInt(timestamp));
              if (isNaN(date)) return 'ç„¡æ•ˆæ—¥æœŸ';

              return date.toLocaleDateString('zh-TW', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit',
              });
            } catch (err) {
              return timestamp;
            }
          };

          // ç¢ºèªåˆªé™¤è¨˜éŒ„
          const confirmDelete = (id) => {
            recordToDelete.value = id;
            showDeleteModal.value = true;
          };

          // å–æ¶ˆåˆªé™¤æ“ä½œ
          const cancelDelete = () => {
            showDeleteModal.value = false;
            recordToDelete.value = null;
          };

          // åŸ·è¡Œåˆªé™¤æ“ä½œ
          const deleteRecord = async () => {
            const id = recordToDelete.value;
            if (!id) return;

            try {
              loading.value = true;
              await axios.get('./api/delete', {
                params: { id: id },
              });

              // æˆåŠŸåˆªé™¤å¾Œï¼Œå¾æœ¬åœ°æ•¸æ“šä¸­ç§»é™¤è©²è¨˜éŒ„
              const index = records.value.findIndex((r) => r.id === id);
              if (index !== -1) {
                records.value.splice(index, 1);
              }

              showToast('è¨˜éŒ„å·²æˆåŠŸåˆªé™¤', 'success');
            } catch (err) {
              console.error('åˆªé™¤è¨˜éŒ„å¤±æ•—:', err);
              showToast('åˆªé™¤å¤±æ•—ï¼Œè«‹å†è©¦ä¸€æ¬¡', 'error');
            } finally {
              loading.value = false;
              showDeleteModal.value = false;
              recordToDelete.value = null;
            }
          };

          // ä¸‹è¼‰CSVæ–‡ä»¶
          const downloadData = () => {
            // å»ºç«‹CSVå…§å®¹
            let csvContent = 'æ—¥æœŸ,æ”¶ç¸®å£“,èˆ’å¼µå£“,å¿ƒè·³\n';

            records.value.forEach((record) => {
              const formattedDate = formatDate(record.date);
              csvContent += `"${formattedDate}",${record.systolic || ''},${record.diastolic || ''},${record.pulse || ''}\n`;
            });

            // å»ºç«‹ä¸¦ä¸‹è¼‰æ–‡ä»¶
            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const url = URL.createObjectURL(blob);
            const link = document.createElement('a');

            link.setAttribute('href', url);
            link.setAttribute('download', `é˜¿å¬¤è¡€å£“ç´€éŒ„_${new Date().toLocaleDateString()}.csv`);
            link.style.display = 'none';

            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);

            showToast('é–‹å§‹ä¸‹è¼‰è³‡æ–™', 'info');
          };

          // è·³è½‰åˆ°è¨˜éŒ„é é¢
          const navigateToRecordPage = () => {
            window.location.href = './';
          };

          // é é¢è¼‰å…¥æ™‚ç²å–è¨˜éŒ„
          onMounted(() => {
            fetchRecords();
          });

          return {
            records,
            loading,
            error,
            showDeleteModal,
            toast,
            formatDate,
            handleInput,
            updateRecord,
            confirmDelete,
            cancelDelete,
            deleteRecord,
            downloadData,
            navigateToRecordPage,
            fetchRecords,
            // æ—¥æœŸé¸æ“‡å™¨ç›¸é—œ
            dateTimeInput,
            showDatePickerModal,
            showDatePicker,
            cancelDateSelection,
            confirmDateSelection,
          };
        },
      }).mount('#app');
    </script>
